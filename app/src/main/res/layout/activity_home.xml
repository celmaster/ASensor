<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:orientation="vertical"
     android:layout_gravity="bottom"
     android:weightSum="100"
     android:background="@color/whitesmoke" >

    <LinearLayout
        android:layout_width="match_parent"
    	 android:layout_height="0dp"
        android:layout_weight="40">
    <ImageView
        android:id="@+id/LogoASensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/expressmessagelogo"
        android:contentDescription="@string/descript"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <Button
            android:id="@+id/btnConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/forestgreen"
            android:text="Configurar Sensor"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <Button
            android:id="@+id/btnInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/forestgreen"
            android:text="Exibir informações do servidor"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="0dp"
        android:layout_weight="15">
    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/forestgreen"
        android:text="Ligar/Desligar Bluetooth"
        android:textColor="#FFFFFF"
        android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>